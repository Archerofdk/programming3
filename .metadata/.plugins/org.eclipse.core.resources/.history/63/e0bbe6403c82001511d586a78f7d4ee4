import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;
import javax.swing.JApplet;



public class AppletGetData extends JApplet implements Runnable
{
	private int screenX = 1920;
	private int screenY = 1080;
	private int n = 0;
	Thread writeToFile;
	boolean running = true;
	File file = new File("Test"+n+".txt");
	
	public void AppletGetData ()
	{
		screenX = this.screenX;
		screenY = this.screenY;
		running = this.running;
		n = this.n;
	}
	public void init ()
	{
		GetData getData = new GetData();
		writeToFile = new Thread(this);
		writeToFile.start();
		
		
	}
	public void destroy ()
	{
		running = false;
		writeToFile = null;
	}
	
	public void run()
	{
		
		BufferedWriter printOut = null;
		
		if (file.exists())
		{
			checkFile(file);
		}
		
		if (!file.exists())
		{
			try {
				file.createNewFile();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}

		try {
			printOut = new BufferedWriter(new FileWriter(file));
		} catch (IOException e1) {
			// TODO Auto-generated catch block
			e1.printStackTrace();
		}
		
		while(running)
		{
			
				try {
					if (GetData.gX > 0 && GetData.gY > 0 && GetData.gX < screenX && GetData.gY < screenY)
					{
						printOut.write("x = " + GetData.gX+ " y = "+ GetData.gY);
						printOut.newLine();
						printOut.flush();
					}
					
					else
					{
						printOut.write("Not looking at screen.");
						printOut.newLine();
						printOut.flush();
					}
					
				} catch (IOException e) {
					// TODO Auto-generated catch block
					e.printStackTrace();
				}
		}
		
	}
	public void checkFile(File file)
	{
		if (file.exists())
		{
			n++;
			file = new File("Test"+n+".txt");
			file = this.file;
			checkFile(file);
		}
	}
}
